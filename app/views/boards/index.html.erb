<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="card">
        <div class="card-header d-flex align-items-center">

          <h1 class="h6">All boards</h1>
          <!-- Button trigger modal -->
          <button type="button" class="ms-auto btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#newBoardModal">
            Add a new board
          </button>
        </div>

        <% @list_of_boards.each do |a_board| %>
          <div class="list-group list-group-flush">
            <a href="/boards/<%= a_board.id %>" class = "d-flex list-group-item list-group-item-action">
              <%= a_board.name %>
              <div class="ms-auto">
               <i class="fa-solid fa-chevron-right"></i>
              </div>
            </a>
        <% end %>

      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="newBoardModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New board</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insert_board" method="post">
          <div class="mb-3">
            <label for="name_box" class="form-label">Name</label>
            <input type="text" class="form-control" name="query_name" id="name_box">
          </div>
          <div class="d-grid">
            <button class="btn btn-success">Add board</button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>



